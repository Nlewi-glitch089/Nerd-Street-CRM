generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(TEAM_MEMBER)
  active    Boolean  @default(true)
  deactivatedAt DateTime?
  deactivatedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Donor {
  id          String     @id @default(uuid())
  firstName   String
  lastName    String?
  email       String?    @unique
  phone       String?
  notes       String?
  totalGiving Float      @default(0)
  lastGiftAt  DateTime?
  active      Boolean    @default(true)
  deletedAt   DateTime?
  deletedBy   String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  donations   Donation[]
  tasks       Task[]
}

model Donation {
  id         String     @id @default(uuid())
  donorId    String
  amount     Float
  method     String?
  campaignId String?
  date       DateTime   @default(now())
  createdAt  DateTime   @default(now())
  notes      String?
  campaign   Campaigns? @relation(fields: [campaignId], references: [id])
  donor      Donor      @relation(fields: [donorId], references: [id])
}

model Task {
  id        String    @id @default(uuid())
  donorId   String?
  title     String
  notes     String?
  dueAt     DateTime?
  completed Boolean   @default(false)
  createdAt DateTime  @default(now())
  donor     Donor?    @relation(fields: [donorId], references: [id])
}

model Campaigns {
  id        String     @id(map: "Campaign_pkey") @default(uuid())
  name      String
  goal      Float?
  startAt   DateTime?
  endAt     DateTime?
  active    Boolean    @default(true)
  deletedAt DateTime?
  deletedBy String?
  createdAt DateTime   @default(now())
  approved  Boolean?
  donations Donation[]
}

model Event {
  id          String     @id @default(uuid())
  title       String
  description String?
  startAt     DateTime?
  endAt       DateTime?
  location    String?
  active      Boolean    @default(true)
  deletedAt   DateTime?
  deletedBy   String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}


model ActionLog {
  id         String   @id @default(uuid())
  action     String
  targetType String
  targetId   String
  userId     String?
  actorName  String?
  meta       Json?
  createdAt  DateTime @default(now())
}

model TempAccessRequest {
  id             String   @id @default(uuid())
  requesterId    String?
  requesterEmail String
  scope          String?
  note           String?
  status         String   @default("PENDING")
  reviewedBy     String?
  reviewedAt     DateTime?
  expiresAt      DateTime?
  createdAt      DateTime @default(now())
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}

enum Role {
  TEAM_MEMBER
  ADMIN
}

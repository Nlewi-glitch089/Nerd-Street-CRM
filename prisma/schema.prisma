generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(TEAM_MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Donor {
  id          String     @id @default(uuid())
  firstName   String
  lastName    String?
  email       String?    @unique
  phone       String?
  notes       String?
  totalGiving Float      @default(0)
  lastGiftAt  DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  donations   Donation[]
  tasks       Task[]
}

model Donation {
  id         String    @id @default(uuid())
  donorId    String
  amount     Float
  method     String?
  campaignId String?
  date       DateTime  @default(now())
  createdAt  DateTime  @default(now())
  notes      String?
  campaign   Campaigns? @relation(fields: [campaignId], references: [id])
  donor      Donor     @relation(fields: [donorId], references: [id])
}

model Task {
  id        String    @id @default(uuid())
  donorId   String?
  title     String
  notes     String?
  dueAt     DateTime?
  completed Boolean   @default(false)
  createdAt DateTime  @default(now())
  donor     Donor?    @relation(fields: [donorId], references: [id])
}

model Campaigns {
  id        String     @id @default(uuid())
  name      String
  goal      Float?
  createdAt DateTime   @default(now())
  approved   Boolean?
  donations Donation[]
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}

enum Role {
  TEAM_MEMBER
  ADMIN
}
